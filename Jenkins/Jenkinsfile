pipeline {
    agent any

    stages {
        stage('Git Checkout') {
            steps {
                echo 'Checking out code from Git...'
                git branch: 'jenkins', url: 'https://github.com/Ashikasalian/devops_project.git'
            }
        }

        stage('Compile') {
            steps {
                echo 'Compiling source code...'
                sh 'javac HelloWorld.java' // Replace with your Java file or script
            }
        }

        stage('Build') {
            steps {
                echo 'Building project...'
                sh 'jar cf HelloWorld.jar HelloWorld.class' // Simple jar creation example
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying the application...'
                sh 'echo "Deploying application to server..."'
            }
        }
    }
}
